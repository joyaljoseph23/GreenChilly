@model Category
<div class="card">
    <div class="card-header">
        <h3 class="text-center">Create Category</h3>
    </div>
    <div class="card-body">
       
        <form method="post" class="row">
            <div class="form-floating py-2 col-12">

                <input asp-for="Name" class="form-control" />
                <label asp-for="Name" class="ms-2"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">

                <input asp-for="DisplayOrder" class="form-control" />
                <label asp-for="DisplayOrder" class="ms-2"></label>
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            <div class="row">

               <div class="col-6">
                    <button type="submit" class="btn btn-secondary form-control">
                       Create
                   </button>

               </div>
                <div class="col-6">
                   <a asp-action="Index" asp-controller="Category" class="btn btn-secondary form-control">
                        Back
                   </a>
                       
                   
                </div>

            </div>

        </form>
    </div>
   
</div>


@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial"/>
    }
}
